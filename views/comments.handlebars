<!-- NavBar -->
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Web Scrape - NY Times Science/Space Headlines</a>
        </div>
    </div>
</nav>

<div class="container">

    <!-- Headlines -->
    <div class="row headlineRow">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="row headlineContent">
                <div class="col-md-4 headlineImage">
                    <img src={{document.photoLink}}>
                </div>
                <div class="col-md-8 headline" <h4>
                    <div class="row">
                        <div class="col-md-12 headlineTitle">
                            <a href={{document.storyLink}} target="_blank">{{document.title}}</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{document.summary}}
                        </div>
                    </div>
                </div>
            </div>
            <hr class="separator">
        </div>
        <div class="col-md-2"></div>
    </div>

    <!-- Comment Form -->
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form method="post" enctype="text/plain">
                <textarea id="commentInput" data-id={{document._id}} placeholder="Write a comment..."></textarea>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>

    <!-- Comments -->
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3 id="commentsHeader">Comments</h3>
            {{#if document.comments}} {{#each document.comments}}
            <div class="comment">{{message}}</div>
            {{/each}} {{else}}
            <h3>Be the first to write a comment!</h3>
            {{/if}}
        </div>
        <div class="col-md-2"></div>
    </div>

</div>